<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.znlccy.house.common.mapper.BlogMapper">

    <!-- 查询所有博客 -->
    <select id="findALLBlog" resultType="blog">
        select * from tb_blog
    </select>

    <!-- 通过主键查询博客 -->
    <select id="findBlogById" parameterType="java.lang.Long" resultType="blog">
        select * from tb_blog where bid = #{bid}
    </select>

    <!-- 添加博客 -->
    <insert id="saveBlog" parameterType="blog">

    </insert>

    <!-- 更新博客 -->
    <update id="updateBlog" parameterType="blog">

    </update>

    <!-- 通过主键删除博客 -->
    <delete id="deleteBlogById" parameterType="java.lang.Long">

    </delete>

</mapper>